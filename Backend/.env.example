NODE_ENV=development
PORT=4000

# Authentication
JWT_SECRET=change-me
JWT_REFRESH_SECRET=change-me-refresh
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email delivery
EMAIL_FROM=noreply@gigvora.test
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# Request handling
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120
CORS_ALLOWED_ORIGINS=http://localhost:3000
TRUST_PROXY=

# API token provisioning
API_TOKEN_PREFIX=gvtok
API_TOKEN_LENGTH=48
API_TOKEN_MAX_PER_USER=25
API_TOKEN_DEFAULT_EXPIRY_DAYS=0

# External verification provider
VERIFICATION_PROVIDER_URL=
VERIFICATION_PROVIDER_API_KEY=
VERIFICATION_PROVIDER_TIMEOUT_MS=10000
VERIFICATION_WEBHOOK_SECRET=
VERIFICATION_AUTO_APPROVE=false

# OTP & security
OTP_TTL_MINUTES=10

# Database defaults
DB_LOGGING=false
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_IDLE=10000
DB_AUTO_MIGRATE=

# Development database (SQLite for rapid prototyping)
DEV_DB_DIALECT=sqlite
DEV_DB_STORAGE=./storage/dev.sqlite
DEV_DB_NAME=gigvora_dev

# Demo database (shared MySQL sandbox)
DEMO_DB_DIALECT=mysql
DEMO_DB_HOST=127.0.0.1
DEMO_DB_PORT=3306
DEMO_DB_NAME=gigvora_demo
DEMO_DB_USER=gigvora_demo
DEMO_DB_PASS=demo-pass

# Production database (MySQL)
PROD_DB_DIALECT=mysql
PROD_DB_HOST=db.internal
PROD_DB_PORT=3306
PROD_DB_NAME=gigvora
PROD_DB_USER=gigvora_app
PROD_DB_PASS=change-me-prod
PROD_DB_POOL_MAX=20
PROD_DB_POOL_MIN=5
PROD_DB_POOL_IDLE=10000

# Testing database
TEST_DB_STORAGE=:memory:
